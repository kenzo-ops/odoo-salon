<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_salon_booking_list" model="ir.ui.view">
            <field name="name">Bookings List</field>
            <field name="model">salon.booking</field>
            <field name="type">list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Booking">
                    <field name="booking_id" />
                    <field name="services_id" />
                    <field name="booking_date" />
                    <field name="end_date" />
                </list>
            </field>
        </record>

        <record id="view_salon_booking_form" model="ir.ui.view">
            <field name="name">Booking Form</field>
            <field name="model">salon.booking</field>
            <field name="type">form</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Booking">
                    <sheet>
                    <div class="oe_title">
                        <label for="booking_id" class="oe_edit_only" string="Nomor Booking"/>
                        <h1>
                            <field name="booking_id" style="width:50%"/>
                        </h1>
                    </div>
                    <group string="Informasi Pelanggan">
                    <field name="customer"/>
                    </group>
                    <group string="Informasi Booking">
                    <field name="booking_date" />
                    <field name="end_date" />
                    </group>
                    <group string="Layanan">
                      <field name="services_id">
                       <list editable="bottom">
                        <field name="name"/>
                         <field name="description"/>
                         <field name="duration"/>
                         <field name="harga"/>
                         <field name="category"/>
                        <field name="sub_category"/>
                       </list>
                      </field>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="salon_booking_action" model="ir.actions.act_window">
                <field name="name">Salon Booking</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">salon.booking</field>
                <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo> 
