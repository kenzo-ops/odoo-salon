	<templates xml:space="preserve">
		<t t-name="owl.OwlServiceDashboard" owl="1">
			<div class="p-3 gap-3 bg-body d-flex flex-column w-100">
				<div class="d-flex w-100 justify-content-between align-items-center my-3">
					<h1 class="fw-bold m-0">
						Salon Dashboard		
					</h1>
					<div class="bg-selector p-1 rounded d-flex align-items-center gap-3" style="border-radius : 13px;">
						<input type="date" class="form-control fw-bold border bg-white rounded" style="width: 160px;" title="Pilih Tanggal" />
						<select class="form-select border bg-white rounded fw-bold" style="width: 125px;">
							<option value="today">
								Hari Ini
							</option>
							<option value="yesterday">
								Kemarin
							</option>
							<option value="this_week">
								Minggu Ini
							</option>
							<option value="last_week">
								Minggu Lalu
							</option>
							<option value="this_month">
								Bulan Ini
							</option>
							<option value="last_month">
								Bulan Lalu
							</option>
							<option value="this_year">
								Tahun Ini
							</option>
							<option value="last_year">
								Tahun Lalu
							</option>
						</select>
						<div class="d-flex align-items-center text-muted" title="Auto-refresh setiap 5 detik">
							<div style="background-color: #ffffff; padding: 6px; border-radius: 5px;" class="border">
								<img t-att-src="'/salon_services/static/src/img/wall-clock.png'" alt="Clock Icon" style="width: 18px; height: 18px; cursor: pointer;" />
							</div>
						</div>
					</div>
				</div>
				<div class="d-flex flex-row gap-3 w-100">
					<ServiceKpiCard img="'/salon_services/static/src/img/customer.png'" title="'Total Services'" model="'salon.services'"/>
					<ServiceKpiCard img="'/salon_services/static/src/img/services.png'" title="'Total Bookings'" model="'salon.booking'"/>
					<ServiceKpiCard img="'/salon_services/static/src/img/bundle.png'" title="'Package Promo	'" model="'salon.packages'"/>
				</div>
				<div class="d-flex w-100 bg-body gap-3">
					<ServiceChart width="'w-25'" type="'pie'" isDarkMode="false" title="'Total Service Status'" chartMode="'service_status'"/>
					<ServiceChart width="'w-50'" type="'line'" isDarkMode="false" title="'Booking Trends'" chartMode="'booking_trend'"/>
					<ServiceChart width="'w-25'" type="'pie'" isDarkMode="false" title="'Layanan'" chartMode="'top_services'"/>
				</div>
			</div>
		</t>
	</templates>