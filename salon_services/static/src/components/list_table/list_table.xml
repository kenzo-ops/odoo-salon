<templates xml:space="preserve">
	<t t-name="owl.ListBookingTable" owl="1">
		<div class="card h-100">
			<div class="card-body p-0" style="max-height: 380px; overflow-y: auto;">
				<div class="list-group list-group-flush">
					<t t-foreach="state.bookings" t-as="b" t-key="b.id">
						<div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" t-on-click="() => openBookingDetail(b.id)" style="cursor: pointer;">
							<!-- Kiri -->
							<div>
								<h4 class="mb-1 fw-bold">
									<t t-esc="b.customer" />
								</h4>
								<small>
									<t t-esc="b.date_label" />
									<t t-esc="b.time_label" />
								</small>
								<div>
									<t t-esc="b.service" />
								</div>
								<div>
									<t t-esc="b.room" />
								</div>
							</div>
							<div class="text-end">
								<i class="fa fa-clock text-info me-1">
								</i>
								<span class="text-info">
									<t t-esc="b.day_label" />
								</span>
							</div>
						</div>
					</t>
				</div>
			</div>
		</div>
	</t>
</templates>
