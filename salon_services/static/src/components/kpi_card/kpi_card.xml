<templates xml:space="preserve">
  <t t-name="owl.ServiceKpiCard" owl="1">
    <div class="d-flex bg-white w-100 border border-2" 
         style="height: 120px; border-radius: 10px; cursor: pointer;"
         t-on-click="openListView">
      <div class="p-3 w-100">
        <h2 class="fw-bold"><t t-esc="props.title"/></h2>
        <h1 class="fw-bold display-6">
          <t t-esc="state.total"/>
        </h1>
      </div>

      <div class="d-flex p-3 flex-row-reverse align-items-center w-75">
        <div class="bg-primary-chart rounded-circle d-flex align-items-center justify-content-center" 
             style="width: 75px; height: 75px;">
          <img t-att-src="props.img" alt="Icon" style="width: 40px; height: 40px; object-fit: contain;" />
        </div>
      </div>
    </div>
  </t>
</templates>