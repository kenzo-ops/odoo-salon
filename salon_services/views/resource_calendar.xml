<odoo>
    <record id="view_resource_calendar_form_inherit_staff" model="ir.ui.view">
        <field name="name">resource.calendar.form.inherit.staff</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Assigned Staff">
                    <field name="assigned_employee_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="work_email"/>
                            <field name="job_title"/>
                            <field name="department_id"/>
                        </list>
                        <form>
                            <group>
                                <field name="name"/>
                                <field name="work_email"/>
                                <field name="job_title"/>
                                <field name="department_id"/>
                            </group>
                        </form>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

     <record id="action_resource_calendar_hospitality" model="ir.actions.act_window">
        <field name="name">Employee Working Schedules</field>
        <field name="res_model">resource.calendar</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="resource.view_resource_calendar_tree"/>
    </record>
</odoo>
