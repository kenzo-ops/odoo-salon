<odoo>
 <data>

    <record id="view_salon_sub_category_list" model="ir.ui.view">
            <field name="name">Sub Category List</field>
            <field name="model">salon.sub.category</field>
            <field name="type">list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Sub Kategori">
                    <field name="name" />
                    <field name="state" widget="badge"
                    decoration-danger="state=='inactive'"
                    decoration-success="state=='active'"
                    />
                </list>
            </field>
        </record>

    <record id="view_salon_sub_category_form" model="ir.ui.view">
            <field name="name">Sub Category Form</field>
            <field name="model">salon.sub.category</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Sub Category">
                    <header>
                        <field name="state"
                        widget="statusbar"
                        statusbar_visible="inactive,active" />
                    </header>
                    <sheet>
                    <group string="Service Sub Category">
                    <field name="name"/>
                    <field name="status" widget="boolean_toggle"/>
                    </group>
                    <group>
                    <field name="category_id"/>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
 
    <record id="salon_services_sub_category_action" model="ir.actions.act_window">
                <field name="name">Sub Category</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">salon.sub.category</field>
                <field name="view_mode">list,form</field>
    </record>

    <menuitem id="salon_service_sub_category" name="Sub Category" parent="salon_master_data" sequence="7" action="salon_services_sub_category_action"/>

 </data>
 
</odoo>