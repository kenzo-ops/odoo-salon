<odoo>
 <data>

   <record id="view_salon_branches_list" model="ir.ui.view">
            <field name="name">Branch List</field>
            <field name="model">salon.branches</field>
            <field name="type">list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Sub Category">
                    <field name="name" />
                    <field name="country_id" />
                    <field name="state_id" />
                    <field name="address" />
                    <field name="state" widget="badge"
                    decoration-danger="state=='inactive'"
                    decoration-success="state=='active'"
                    />
                </list>
            </field>
   </record>

   <record id="view_salon_branches_form" model="ir.ui.view">
            <field name="name">Branch Form</field>
            <field name="model">salon.branches</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Cabang">
                <header>
                        <field name="state"
                        widget="statusbar"
                        statusbar_visible="inactive,active" />
                </header>
                    <sheet>
                    <group>
                    <group string="Branch Information">
                    <field name="name"/>
                    <field name="telephone_number"/>
                    <field name="email"/>
                    <field name="manager_id" />
                    <field name="status" widget="boolean_toggle"/>
                    </group>
                    <group string="Adress">
                     <field name="country_id" />
                     <field name="state_id" domain="[('country_id', '=', country_id)]" options="{'no_create': True}" />
                     <field name="city_id" />
                     <field name="address" />
                    </group>
                    <notebook>
                        <page string="Service Available">
                            <field name="service_id" options="{'no_create': True}">
                                <list editable="bottom">
                                <field name="name"/>
                                <field name="description" readonly="1"/>
                                <field name="category" readonly="1"/>
                                <field name="duration" readonly="1"/>
                                <field name="harga" readonly="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

    <record id="salon_branches_action" model="ir.actions.act_window">
                <field name="name">Branch</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">salon.branches</field>
                <field name="view_mode">list,form</field>
    </record>
 </data>
 
</odoo>