<odoo>
    <record id="view_salon_customer_booking_stats_tree" model="ir.ui.view">
        <field name="name">salon.customer.booking.stats.tree</field>
        <field name="model">salon.customer.booking</field>
        <field name="arch" type="xml">
            <list>
                <field name="customer_id"/>
                <field name="total_booking"/>
                <field name="total_spent"/>
                <field name="last_booking_date"/>
            </list>
        </field>
    </record>

    <record id="action_salon_customer_booking_stats" model="ir.actions.act_window">
        <field name="name">Statistik Customer</field>
        <field name="res_model">salon.customer.booking</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p>Menampilkan ringkasan data pelanggan yang pernah melakukan booking salon.</p>
        </field>
    </record>

</odoo>
