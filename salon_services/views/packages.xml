<odoo>
 <data>

    <!-- Tree View -->
    <record id="view_salon_packages_list" model="ir.ui.view">
        <field name="name">List Paket Salon</field>
        <field name="model">salon.packages</field>
        <field name="arch" type="xml">
            <list string="Packages">
                <field name="name"/>
                <field name="duration"/>
                <field name="total_price"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge"
                       decoration-danger="state=='inactive'"
                       decoration-success="state=='active'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_salon_package_form" model="ir.ui.view">
        <field name="name">Package</field>
        <field name="model">salon.packages</field>
        <field name="arch" type="xml">
            <form string="Package">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="inactive,active"/>
                </header>
                <sheet>
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="duration"/>
                            <field name="total_price"/>
                            <field name="status" widget="boolean_toggle"/>
                        </group>
                        <group string="Effective date">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Services">
                            <field name="package_service_id">
                                <list editable="bottom">
                                    <field name="service_id"/>
                                    <field name="discount"/>
                                    <field name="quantity"/>
                                    <field name="total_price"/>
                                </list>
                            </field>
                        </page>
                        <page string="Rooms">
                            <field name="room_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state=='active'"
                                           decoration-danger="state=='inactive'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="salon_packages_action" model="ir.actions.act_window">
        <field name="name">Packages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">salon.packages</field>
        <field name="view_mode">list,form</field>
    </record>

 </data>
</odoo>