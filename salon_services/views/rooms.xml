<odoo>
 <data>

    <!-- Tree View -->
    <record id="view_salon_rooms_list" model="ir.ui.view">
        <field name="name">List of Rooms</field>
        <field name="model">salon.room</field>
        <field name="arch" type="xml">
            <list string="Rooms">
                <field name="name"/>
                <field name="branch_id" widget="many2many_tags" options="{'no_create': True}" string="Branch"/>
                <field name="state" widget="badge"
                       decoration-danger="state=='inactive'"
                       decoration-success="state=='active'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_salon_rooms_form" model="ir.ui.view">
        <field name="name">Rooms Form</field>
        <field name="model">salon.room</field>
        <field name="arch" type="xml">
            <form string="Rooms">
                <header>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="inactive,active" />
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="status" widget="boolean_toggle"/>
                    </group>
                    <notebook>
                        <page string="Branch Office">
                            <field name="branch_id" readonly="1">
                                <list editable="bottom">
                                    <field name="branch_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Services">
                            <field name="service_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="duration"/>
                                    <field name="harga"/>
                                    <field name="category"/>
                                    <field name="state" widget="badge"
                                        decoration-success="state=='active'"
                                        decoration-danger="state=='inactive'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Packages">
                            <field name="package_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="duration"/>
                                    <field name="total_price"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state=='active'"
                                           decoration-danger="state=='inactive'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="salon_rooms_action" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">salon.room</field>
        <field name="view_mode">list,form</field>
    </record>

 </data>
</odoo>