<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_salon_booking_list" model="ir.ui.view">
            <field name="name">Bookings List</field>
            <field name="model">salon.booking</field>
            <field name="type">list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Booking">
                    <field name="booking_id" />
                    <field name="customer" />
                    <field name="booking_date" />
                    <field name="end_date" />
                    <field name="total_price" />
                    <field name="state" widget="badge"
                    decoration-success="state=='konfirmasi' or state=='checkin'"
                    decoration-info="state=='checkout'"
                    decoration-danger="state=='batal'"
                    />
                </list>
            </field>
        </record>

        <record id="view_salon_booking_form" model="ir.ui.view">
            <field name="name">Booking Form</field>
            <field name="model">salon.booking</field>
            <field name="type">form</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <form string="Booking">
                <header>
                <button name="action_konfirmasi"
                            type="object"
                            string="Confirm"
                            invisible="state == 'konfirmasi' or state == 'dibatalkan' or state == 'checkin' or state == 'checkout' or state == 'batal'" />
                    <button name="action_draft"
                            type="object"
                            string="Draft"
                            invisible="state == 'draft'" />
                    <button name="action_checkin"
                            type="object"
                            string="Check In"
                            invisible="state == 'draft' or state == 'checkout' or state == 'batal' or state == 'checkin'" />
                    <button name="action_checkout"
                            type="object"
                            string="Check Out"
                            invisible="state == 'draft' or state == 'batal' or state == 'konfirmasi' or state == 'checkout'" />
                    <button name="action_batal"
                            type="object"
                            string="Cancel"
                            invisible="state == 'draft' or state == 'batal'" />
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,konfirmasi,checkin,checkout,batal" />
                </header>
                    <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-credit-card">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                    </div>
                    <div class="oe_title">
                    <label for="booking_id" class="oe_edit_only" string="Booking Number"/>
                        <h1>
                            <field name="booking_id" style="width:50%"/>
                        </h1>
                <label for="working_hours" class="oe_edit_only" string="Office Working Hours"/>
                <h4>
                    <field name="working_hours" style="width:50%"/>
                </h4>
                    </div>
                    <group>
                    <group string="Customer Information">
                    <field name="customer"/>
                    <field name="customer_number"/>
                    <field name="customer_address"/>
                    <field name="customer_email"/>
                    </group>
                    <group string="Booking Information">
                    <field name="branch_id" />
                    <field name="staff_id" domain="[('branch_id', '=', branch_id)]"/>
                    <field name="booking_date" widget="working_hours_datetime"/>
                    <field name="end_date" placeholder="Pick A Service First"/>
                    <field name="total_price" />
                    </group>
                    </group>
                    <group>
                    <notebook>
                        <page string="Services">
                      <field name="service_booking_id">
                       <list editable="bottom">
                         <field name="service_id"/>
                         <field name="service_description"/>
                         <field name="service_duration"/>
                         <field name="service_price"/>
                        <field name="service_category"/>
                        <field name="service_sub_category"/>
                       </list>
                      </field>
                        </page>
                        <page string="Package">
                        <field name="package_booking_id">
                         <list editable="bottom">
                          <field name="package_id" />
                          <field name="package_description" />
                          <field name="package_state" widget="badge"
                    decoration-danger="package_state=='inactive'"
                    decoration-success="package_state=='active'" />
                          <field name="package_duration" />
                          <field name="package_total_price" />
                          <field name="package_start_date" />
                          <field name="package_end_date" />
                         </list>
                        </field>
                        </page>
                    <page string="Attendees">
                        <field name="attendee_ids" widget="many2many_attendee"/>
                    </page>
                    </notebook>
                    </group>
                    </sheet>
                    <div class="oe_chatter">
                        <chatter>
                            <field name="message_follower_ids" widget="mail_followers" />
                            <field name="activity_ids" widget="mail_activity" />
                            <field name="message_ids" widget="mail_thread" options="{'display_log_button': True}"/>
                        </chatter>
                    </div>
                </form>
            </field>
        </record>

        <record id="salon_booking_action" model="ir.actions.act_window">
                <field name="name">Booking List</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">salon.booking</field>
                <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo> 
