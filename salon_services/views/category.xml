<odoo>
 <data>

    <record id="view_salon_services_category_list" model="ir.ui.view">
            <field name="name">Services Category List</field>
            <field name="model">salon.service.category</field>
            <field name="type">list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Kategori">
                    <field name="name" />
                    <field name="state" widget="badge"
                    decoration-danger="state=='inactive'"
                    decoration-success="state=='active'"
                    />
                </list>
            </field>
        </record>

    <record id="view_salon_services_category_form" model="ir.ui.view">
            <field name="name">Services Category Form</field>
            <field name="model">salon.service.category</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kategori">
                    <header>
                        <field name="state"
                        widget="statusbar"
                        statusbar_visible="inactive,active" />
                    </header>
                    <sheet>
                    <group string="Kategori Layanan">
                    <field name="name"/>
                    <field name="status" widget="boolean_toggle"/>
                    </group>
                    <group string="Kategori Layanan">
                    <field name="sub_category_id">
                     <list editable="bottom">
                       <field name="name" />
                     </list>
                    </field>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
 
    <record id="salon_services_category_action" model="ir.actions.act_window">
                <field name="name">Salon Category</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">salon.service.category</field>
                <field name="view_mode">list,form</field>
    </record>

    <menuitem id="salon_service_category" name="Kategori" parent="salon_master_data" sequence="4" action="salon_services_category_action"/>

 </data>
 
</odoo>