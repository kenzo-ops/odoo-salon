<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_salon_services_list" model="ir.ui.view">
            <field name="name">Services List</field>
            <field name="model">salon.services</field>
            <field name="type">list</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Services">
                    <field name="name" />
                    <field name="description" />
                    <field name="duration" />
                    <field name="harga" />
                    <field name="state" widget="badge"
                    decoration-danger="state=='inactive'"
                    decoration-success="state=='active'"
                    />                
                    </list>
            </field>
        </record>

        <record id="view_salon_services_form" model="ir.ui.view">
            <field name="name">Services Form</field>
            <field name="model">salon.services</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Services">
                    <header>
                        <field name="state"
                        widget="statusbar"
                        statusbar_visible="inactive,active" />
                    </header>
                    <sheet>
                    <group>
                    <group string="Service Information">
                    <field name="name"/>
                    <field name="description"/>
                    </group>
                    <group string="Category">
                    <field name="category" />
                    <field name="sub_category" domain="[('category_id', '=', category)]" options="{'no_create': True}"/>
                    <field name="status" widget="boolean_toggle"/>
                    </group>
                    </group>
                    <group string="Price and Other">
                    <field name="duration" />
                    <field name="harga" />
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="salon_services_action" model="ir.actions.act_window">
                <field name="name">Salon Services</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">salon.services</field>
                <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
